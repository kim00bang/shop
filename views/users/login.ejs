<div class="row my-5 justify-content-center mx-3">
    <h1 class="text-center">로그인 페이지</h1>
    <div class="col-md-3 card p-3">
        <form name="frm">
            <div class="input-group mb-3">
                <span class="input-group-text">아이디</span>
                <input name="uid" class="form-control">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">비밀번호</span>
                <input name="upass" class="form-control" type="password">
            </div>
            <button class="btn btn-danger w-100">로그인</button>
        </form>
        <div class="text-end">
            <a href="/users/insert">회원가입</a>
        </div>
    </div>
</div>
<script>
    $(frm).on("submit", function(e){
        e.preventDefault();
        const uid = $(frm.uid).val();
        const upass = $(frm.upass).val();
        //유효성 체크
        if(uid=="") {
            alert("아이디를 입력하세요!");
            $(frm.uid).focus();
        } else if(upass=="") {
            alert("비밀번호를 입력하세요!");
            $(frm.upass).focus();
        } else {
            //로그인 체크
            $.ajax({
                type:"post",
                url:"/users/login",
                data:{uid:uid, upass:upass},
                success:function(data) {
                    if(data==2){
                        alert("비밀번호가 일치하지 않습니다.")
                    } else if(data==0) {
                        alert("아이디가 존재하지 않습니다.")
                    } else {
                        alert("로그인에 성공했습니다.")
                        sessionStorage.setItem("uid", uid);
                        location.href="/";
                    }
                }
            });
        }
    });
</script>